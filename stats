loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
local Workspace = game:GetService("Workspace")

local livingFolder = Workspace:WaitForChild("Living")
local HOLD_DURATION = 1.5

-- Funci√≥n para cambiar el HoldDuration de todos los ProximityPrompt dentro de un objeto
local function actualizarPromptsEn(obj)
	for _, prompt in ipairs(obj:GetDescendants()) do
		if prompt:IsA("ProximityPrompt") then
			prompt.HoldDuration = HOLD_DURATION
		end
	end
end

-- Revisar los prompts actuales
for _, child in ipairs(livingFolder:GetChildren()) do
	actualizarPromptsEn(child)
end

-- Detectar si se a√±aden nuevos hijos a workspace.Living
livingFolder.ChildAdded:Connect(function(child)
	-- Cuando se a√±aden nuevos hijos, revisar sus descendientes
	child.DescendantAdded:Connect(function(desc)
		if desc:IsA("ProximityPrompt") then
			desc.HoldDuration = HOLD_DURATION
		end
	end)
	
	-- Tambi√©n actualizar inmediatamente si ya contiene ProximityPrompts
	actualizarPromptsEn(child)
end)

-- Tambi√©n detectar si se a√±aden ProximityPrompts directamente en objetos ya existentes
for _, child in ipairs(livingFolder:GetChildren()) do
	child.DescendantAdded:Connect(function(desc)
		if desc:IsA("ProximityPrompt") then
			desc.HoldDuration = HOLD_DURATION
		end
	end)
end